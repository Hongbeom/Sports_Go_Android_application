<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:background="#00000000"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="326dp"
        android:layout_marginTop="93dp"
        android:background="#FFFFFF"
        android:orientation="vertical"
        android:weightSum="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="UserInfo"
            android:textSize="20sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.1"
            android:weightSum="1">

            <TextView
                android:id="@+id/d_email"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.3"
                android:background="#FFFFFF"
                android:gravity="center"
                android:text="E-mail"
                android:textAlignment="center"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/dialog_email"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.7"
                android:background="#FFFFFF"
                android:gravity="center"
                android:text="e-mail" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.1"
            android:weightSum="1">

            <TextView
                android:id="@+id/d_name"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.3"
                android:background="#FFFFFF"
                android:gravity="center"
                android:text="Name"
                android:textAlignment="center"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/dialog_name"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.7"
                android:background="#FFFFFF"
                android:gravity="center"
                android:text="Name" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.1"
            android:weightSum="1">

            <TextView
                android:id="@+id/d_sex"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.3"
                android:background="#FFFFFF"
                android:gravity="center"
                android:text="Sex"
                android:textAlignment="center"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/dialog_sex"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.7"
                android:background="#FFFFFF"
                android:gravity="center"
                android:text="Sex" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.12"
            android:weightSum="1">

            <TextView
                android:id="@+id/d_region"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.3"
                android:background="#FFFFFF"
                android:gravity="center"
                android:text="Region"
                android:textAlignment="center"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/dialog_region"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.7"
                android:background="#FFFFFF"
                android:gravity="center"
                android:text="Region" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.1"
            android:weightSum="1">

            <TextView
                android:id="@+id/e_evaluation"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.3"
                android:background="#00000000"
                android:gravity="center"
                android:text="Evaluation"
                android:textAlignment="center"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/dialog_evaluation"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.7"
                android:background="#00000000"
                android:gravity="center"
                android:text="Evaluation" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.2"
            android:weightSum="1">

            <TextView
                android:id="@+id/d_newevalation"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#00000000"
                android:gravity="center"
                android:text="Your Evaluation"
                android:textAlignment="center"
                android:textStyle="bold" />


        </LinearLayout>

        <RatingBar
            android:id="@+id/dialog_rating"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:isIndicator="false"
            android:max="5"
            android:numStars="5"
            android:rating="3"
            android:stepSize="0.5" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.2"
            android:orientation="horizontal"
            android:weightSum="1">

            <Button
                android:id="@+id/btn_deval"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:text="Evaluate" />


            <Button
                android:id="@+id/btn_dcancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:text="Cancel" />

        </LinearLayout>
    </LinearLayout>




</android.support.constraint.ConstraintLayout>